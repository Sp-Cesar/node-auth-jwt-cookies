  <div class="login-box text-center">
    <!-- Logo -->
    <div class="mb-3">
        <img src="/img/isotipo(FAFAFA).png"alt="Logo" width="250">
    </div>

    <!-- Título -->
    <h4 class="mb-4">Registrate</h4>

    <!-- Formulario -->
    <form action="/register" method="POST">
        <div class="mb-3 text-start">
            <label class="form-label">Nombre </label>
            <input id="user" name="user" type="text" class="form-control bg-dark text-light border-secondary" required>
        </div>

        <div class="mb-3 text-start">
            <label class="form-label">Nombre de Usuario</label>
            <input id="user" name="user" type="text" class="form-control bg-dark text-light border-secondary" required>
        </div>
        <div class="mb-3 text-start">
            <label class="form-label">Contraseña</label>
            <input id="pass" name="pass" type="password" class="form-control bg-dark text-light border-secondary" required>
        </div>
      <button type="submit" class="btn btn-login w-100">Registrar</button>
    </form>

    <!-- Enlace de iniciar sesión -->
